@model WeddingShare.Models.PhotoGallery
@using WeddingShare.Constants
@using WeddingShare.Helpers
@using WeddingShare.Views.Gallery
@inject WeddingShare.Helpers.IUrlHelper _url

@{
    var qrAppend = new List<KeyValuePair<string, string>>();

        // Forcing Default mode (Upload view) for QR Codes to prevent getting stuck in Slideshow mode
        qrAppend.Add(new KeyValuePair<string, string>("mode", "Default"));

    var qrDefaultOrder = await _settings.GetOrDefault(Settings.Gallery.QRCode.DefaultSort, string.Empty, Model?.Gallery?.Id);
    if (!string.IsNullOrWhiteSpace(qrDefaultOrder))
    {
        qrAppend.Add(new KeyValuePair<string, string>("order", qrDefaultOrder));
    }

    if (await _settings.GetOrDefault(Settings.Gallery.QRCode.IncludeCulture, true, Model?.Gallery?.Id))
    {
        try
        {
            var currentCulture = Context.Request.HttpContext.Session.GetString(SessionKey.SelectedLanguage);
            if (!string.IsNullOrWhiteSpace(currentCulture))
            {
                qrAppend.Add(new KeyValuePair<string, string>("culture", currentCulture));
            }
        }
        catch { }
    }

    var qrExclude = new List<string>() { "partial" };
    if (await _settings.GetOrDefault(Settings.Basic.HideKeyFromQRCode, false))
    {
        qrExclude.Add("key");
        qrExclude.Add("enc");
    }

    ViewBag.QRCodeLink = _url.GenerateFullUrl(Context.Request, Context.Request.Path, qrAppend, qrExclude);
}

@if (Model?.UploadActivated != null && Model.UploadActivated && Model.ViewMode != ViewMode.Presentation && Model.ViewMode != ViewMode.Slideshow)
{
    var allowedFileTypes = (await _settings.GetOrDefault(Settings.Gallery.AllowedFileTypes, ".jpg,.jpeg,.png,.mp4,.mov", Model?.Gallery?.Id))?.Split(',', StringSplitOptions.TrimEntries | StringSplitOptions.RemoveEmptyEntries)?.Select(x => $".{x.Trim('.')}")?.OrderBy(x => x)?.ToList() ?? new List<string>();
    var identityRequired = await _settings.GetOrDefault(Settings.IdentityCheck.RequireIdentityForUpload, false);

    <header class="file-uploader bg-dark py-1 py-lg-4">
        <div class="container px-0 px-lg-2">
            <form class="file-uploader-form" data-identity-required="@((identityRequired && string.IsNullOrWhiteSpace(Context?.Session?.GetString(SessionKey.ViewerIdentity))).ToString().ToLower())">
                @Html.AntiForgeryToken()

                <fieldset class="upload_drop text-center p-4 text-center text-white">
                    <svg class="upload_svg" width="60" height="60" aria-hidden="true">
                        <use href="#icon-image-upload"></use>
                    </svg>

                    <h2 class="strong my-2">@_localizer["Upload_Media"].Value</h2>
                    <p class="small my-2">@(ViewBag.IsMobile ?? false ? _localizer["Click_To_Upload"].Value : _localizer["Drag_And_Drop"].Value)</p>
                    <p class="small my-2">(@string.Join(", ", allowedFileTypes).ToLower())</p>

                    <input class="position-absolute invisible upload-input" data-post-gallery-id="@Model?.Gallery?.Id" data-post-url="/Gallery/UploadImage" data-post-key="@Model?.SecretKey" data-post-allow-camera="@(((ViewBag.IsMobile ?? false) && await _settings.GetOrDefault(Settings.Gallery.CameraUploads, false)).ToString().ToLower())" type="file" multiple accept="image/*,video/*" />
                </fieldset>
            </form>
        </div>
    </header>

    <svg style="display:none">
        <defs>
            <symbol id="icon-image-upload" clip-rule="evenodd" viewBox="0 0 96 96">
                <path d="M47 6a21 21 0 0 0-12.3 3.8c-2.7 2.1-4.4 5-4.7 7.1-5.8 1.2-10.3 5.6-10.3 10.6 0 6 5.8 11 13 11h12.6V22.7l-7.1 6.8c-.4.3-.9.5-1.4.5-1 0-2-.8-2-1.7 0-.4.3-.9.6-1.2l10.3-8.8c.3-.4.8-.6 1.3-.6.6 0 1 .2 1.4.6l10.2 8.8c.4.3.6.8.6 1.2 0 1-.9 1.7-2 1.7-.5 0-1-.2-1.3-.5l-7.2-6.8v15.6h14.4c6.1 0 11.2-4.1 11.2-9.4 0-5-4-8.8-9.5-9.4C63.8 11.8 56 5.8 47 6Zm-1.7 42.7V38.4h3.4v10.3c0 .8-.7 1.5-1.7 1.5s-1.7-.7-1.7-1.5Z M27 49c-4 0-7 2-7 6v29c0 3 3 6 6 6h42c3 0 6-3 6-6V55c0-4-3-6-7-6H28Zm41 3c1 0 3 1 3 3v19l-13-6a2 2 0 0 0-2 0L44 79l-10-5a2 2 0 0 0-2 0l-9 7V55c0-2 2-3 4-3h41Z M40 62c0 2-2 4-5 4s-5-2-5-4 2-4 5-4 5 2 5 4Z" />
            </symbol>
        </defs>
    </svg>
}


@if (Model?.ViewMode != ViewMode.Presentation && Model?.ViewMode != ViewMode.Slideshow)
{
    <section class="py-2 bg-light text-center" id="danmaku-sender-section">
        <div class="container">
            <div class="input-group mb-3" style="max-width: 600px; margin: 0 auto;">
                <input type="text" id="danmakuInput" class="form-control" placeholder="輸入祝福語... (Send a Message)" aria-label="Message">
                <button class="btn btn-primary" type="button" id="btnSendDanmaku">發送 (Send)</button>
            </div>
        </div>
    </section>
}

<section class="py-1 py-lg-4">
    <div class="row mt-3 mt-lg-0">
        @if (Model?.ViewMode == ViewMode.Slideshow || await _settings.GetOrDefault(Settings.Gallery.FullWidth, false, Model?.Gallery?.Id))
        {
            <div id="main-gallery" class="col-12 px-3 px-lg-5">
                <partial name="~/Views/Gallery/GalleryWrapper.cshtml" model="Model" />
            </div>
        }
        else
        {
            <div class="col-12 col-lg-2 d-none d-lg-block"></div>
            <div id="main-gallery" class="col-12 col-lg-8 px-3 px-lg-1">
                <partial name="~/Views/Gallery/GalleryWrapper.cshtml" model="Model" />
            </div>
            <div class="col-12 col-lg-2 d-lg-block pt-0 pt-lg-0">
                <partial name="~/Views/Gallery/GalleryOptions.cshtml" model="Model" />
            </div>
        }
    </div>
</section>

@if (await _settings.GetOrDefault(Settings.Gallery.FullWidth, false, Model?.Gallery?.Id) && User?.Identity != null && User.Identity.IsAuthenticated && !Model.Gallery.Identifier.Equals("All", StringComparison.OrdinalIgnoreCase))
{
    <!-- Settings Button -->
    <i id="btn-full-width-settings" class="fa-solid fa-gear btnGallerySettings" data-gallery-name="@Model?.Gallery?.Name" data-gallery-id="@Model?.Gallery?.Id"></i>
}

<script src="~/js/gallery.js" asp-append-version="true"></script>
<script src="~/lib/signalr/signalr.min.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        var connection = new signalR.HubConnectionBuilder()
            .withUrl("/danmakuHub")
            .withAutomaticReconnect()
            .build();

        connection.start().then(function () {
            // Join group just in case we need to receive too? For now just sending.
            // connection.invoke("JoinGroup", "@Model?.Gallery?.Id");
        }).catch(function (err) {
            return console.error(err.toString());
        });

        document.getElementById("btnSendDanmaku").addEventListener("click", function (event) {
            var msg = document.getElementById("danmakuInput").value;
            if (!msg) return;
            
            connection.invoke("SendMessage", msg, "@Model?.Gallery?.Id").catch(function (err) {
                return console.error(err.toString());
            });
            
            document.getElementById("danmakuInput").value = '';
            event.preventDefault();
        });
    });
</script>